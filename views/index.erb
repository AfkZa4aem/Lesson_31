<h1>Welcome to PizzaShop!</h1>


<div class="row">

	<% @products.each do |product| %>
		<div class="col-md-3">
      <div>
		    <%= product.title %>
      </div>
      <div>
        <img src="<%= product.path_to_image %>"/>
      </div>
      <div>
        <%= product.description %>
      </div>
      <div>
        <%= product.size %> cm
      </div>
      <div>
        <%= product.price %> rub
      </div>
      <div>
        <button class="btn btn-sm btn-success">Add to cart</button>
      </div>
		</div>
	<% end %>

</div>
<br/>
<button class="btn btn-primary" onclick="something()">Click me!</button>
